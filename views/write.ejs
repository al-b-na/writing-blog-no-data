                <input class="form-control mb-2" type="text" name="title" id="title" placeholder="title" required>
                <textarea class="form-control" name="content" id="txtarea"  id="floatingTextarea2" placeholder="and the rest" style="height: 300px"></textarea>
            </div>
            <div>
                <input type="submit" value="Upload">
